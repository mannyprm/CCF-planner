# Cape Christian Sermon Planning System - Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production
APP_URL=https://sermons.capechristian.org

# Database (DigitalOcean Managed PostgreSQL)
DATABASE_URL=postgresql://username:password@db-host.db.ondigitalocean.com:25060/sermon_planner?sslmode=require
POSTGRES_DB=sermon_planner
POSTGRES_USER=ccf_admin
POSTGRES_PASSWORD=your_secure_password_here

# Redis Cache
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here

# JWT & Security
JWT_SECRET=your_very_long_random_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Firebase Authentication
FIREBASE_PROJECT_ID=cape-christian-sermons
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@cape-christian-sermons.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Firebase_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Frontend Firebase Config (Public)
REACT_APP_FIREBASE_CONFIG={"apiKey":"","authDomain":"","projectId":"","storageBucket":"","messagingSenderId":"","appId":""}

# DigitalOcean Spaces (S3-Compatible)
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_BUCKET=cape-christian-sermons
S3_BACKUP_BUCKET=cape-christian-backups
S3_ACCESS_KEY=your_do_spaces_access_key
S3_SECRET_KEY=your_do_spaces_secret_key
S3_REGION=nyc3
CDN_URL=https://cape-christian-sermons.nyc3.cdn.digitaloceanspaces.com

# Bible API
BIBLE_API_KEY=your_bible_api_key_here
BIBLE_API_URL=https://api.scripture.api.bible/v1

# Export Service
EXPORT_TIMEOUT_MS=60000
MAX_EXPORT_SIZE_MB=50
PDF_GENERATION_TIMEOUT=30000

# Upload Limits
MAX_UPLOAD_SIZE_MB=25
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Email Configuration (Optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
FROM_EMAIL=noreply@capechristian.org
FROM_NAME=Cape Christian Sermon Planner

# Monitoring & Logging
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info
ENABLE_METRICS=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGINS=https://sermons.capechristian.org,http://localhost:3000
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_REALTIME_COLLABORATION=true
ENABLE_EXPORT_QUEUE=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_AUDIT_LOG=true
ENABLE_VERSION_HISTORY=true

# Development Settings (Only for development profile)
PGADMIN_EMAIL=admin@capechristian.org
PGADMIN_PASSWORD=your_pgadmin_password

# Grafana Monitoring (Optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# API Settings
API_PORT=8080
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8080/api/v1

# AppFlowy Settings (if self-hosting)
APPFLOWY_DATABASE_URL=${DATABASE_URL}
APPFLOWY_REDIS_URL=${REDIS_URL}
APPFLOWY_S3_BUCKET=${S3_BUCKET}

# SSL/TLS
LETSENCRYPT_EMAIL=tech@capechristian.org
LETSENCRYPT_DOMAIN=sermons.capechristian.org

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
CLIENT_MAX_BODY_SIZE=25M
PROXY_TIMEOUT=90s